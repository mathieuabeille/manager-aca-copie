<div class="container">
  <h2>Modifier mon compte</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.input :entreprise, label: 'Entreprise',
                required: false
               %>
    <%= f.input :bank, label: 'IBAN',
                required: false
             %>
        <%= f.input :address, label:'Adresse',
                required: false
             %>
               <%= f.input :siret, label:'Siret',
                required: false
             %>
                 <%= f.input :bank, label: 'IBAN',
                required: false
             %>
    <%= f.input :password, label: 'Mot de passe',
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, label: 'Mot de passe',
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password, label: 'Mot de passe actuel',
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Modifier", class: 'btn btn-flat' %>
  </div>
<% end %>

<h3>Supprimer mon compte</h3>

<p>Unhappy? <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Retour", :back %>
</div>
