<div style="background-image: url(<%= asset_path 'background.jpeg'%>); width: 100vw;  background-size: cover;
">


  <div class="container-log">

    <div style="text-align: center;">
      <%= image_tag ("logo.png"), style: 'height: 100px; margin-bottom: 30px;' %>
      <h2>Dossier Jaune - Connexion</h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :login,
      required: false,
      autofocus: true, label: "Identifiant" %>
      <%= f.input :password,
      required: false,
      input_html: { autocomplete: "current-password" }, label: "Mot de passe" %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions btn btn-flat">
      <%= f.button :submit, "Connexion" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
