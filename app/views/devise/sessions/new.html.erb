<div style="background-image: url(https://images.unsplash.com/photo-1544811655-bc18e440b9e6?ixid=MXwxMjA3fDB8MHxzZWFyY2h8NTB8fHJpc2V8ZW58MHx8MHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60); width: 100vw;  background-size: cover;
">


  <div class="container-log">

    <div style="text-align: center;">
      <h2>Rise - Connexion</h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :login,
      required: false,
      autofocus: true, label: "Identifiant" %>
      <%= f.input :password,
      required: false,
      input_html: { autocomplete: "current-password" }, label: "Mot de passe" %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions btn btn-flat">
      <%= f.button :submit, "Connexion" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
