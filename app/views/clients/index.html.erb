<div class="container-list">

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Liste des devis', invoices_path, class: 'nav-link' %>
        </li>
        <li class="nav-item active">
          <%= link_to 'Liste des clients', clients_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Liste des libellÃ©s', labels_path, class: 'nav-link' %>
        </li>
      </ul>
      <span class="navbar-text">
        <%= link_to 'Nouveau client', new_client_path, class: 'btn btn-flat', style: "color: #f4f4f4;" %>
      </span>
    </div>
  </nav>

  <div class="tablehead row" style="margin-top: 20px;">
    <div class="fileimg col-2"></div>
    <div class="info col-2">Nom</div>
    <div class="info col-2">Adresse</div>
    <div class="info col-2">Dirigeant</div>
    <div class="info col-2">Email</div>
    <div class="info col-2">Action</div>
  </div>

  <div class="row">
    <% @clients.each do |client| %>
    <div class="document">
      <div class="fileimg col-2">
        <%= link_to client do %>
        <%= image_tag ( "file.png"), class: "image_link" %>
        <% end %>

      </div>
      <div class="info col-2">
        <%= link_to client do %>
        <%= client.name %>
        <% end %>
      </div>
      <div class="info col-2"><%= client.address %></div>
      <div class="info col-2"><%= client.leader %></div>
      <div class="info col-2"><%= client.email %></div>
      <div class="info col-2">
        <%= link_to 'Voir', client, class: "btn-flat-edit" %>
        <%= link_to 'Modifier', edit_client_path(client), class: "btn-flat-edit" %>
        <%= link_to 'Supprimer', client, method: :delete, data: { confirm: 'Etes vous certain?' }, class: "btn-flat-edit" %>
      </div>
    </div>
    <% end %>
  </div>

</div>
