
<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "Nom du client" %>
    <%= f.input :address, label: "Adresse du client" %>
    <%= f.input :phone, label: "Numero de téléphone" %>
    <%= f.input :leader, label: "Nom du dirigeant" %>
    <%= f.input :email, label: "Adresse email du client" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Soumettre", class: "btn btn-flat" %>
  </div>
<% end %>
