<div class="header">
  <h2>Les dossiers partagés par</h2>
  <h1>Abeille Consultants Associés</h1>
  <div class="action">
  <div></div>  <% if current_user.superadmin_role? || current_user.supervisor_role? %>
  <%= link_to 'Ajouter un dossier', new_folder_path, class: "btn-flat" %>
  <% end %></div>

</div>

<div class="container-list">


  <% @folders.each do |folder| %>
    <%= link_to folder_documents_path(folder) do %>
    <div class="notification">
      <img src='https://images.unsplash.com/photo-1595860041826-de0b53177bcd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1000&q=80' class="avatar-large" />
  <div class="notification-content">
  <%= link_to folder_documents_path(folder) do %>
    <p><small><%= folder.name %></small>
    <% end %>
  </p>
    <p> <i>Crée le <%= folder.created_at %></i> </p>
    <p> <i>Modifié le <%= folder.updated_at %></i> </p>
     </div>
  <div class="notification-actions">
  <% if current_user.superadmin_role? || current_user.supervisor_role? %>
  <%= link_to edit_folder_path(folder) do %>
    Modifier <i class="fas fa-pencil-alt"></i>
    <% end %>
  <%= link_to folder, method: :delete, data: { confirm: "Êtes-vous certain de vouloir supprimer ce dossier? Les fichiers qu'il contient seront aussi supprimés." } do %>
    Supprimer <i class="far fa-trash-alt"></i>
    <% end %>
  <% end %>
  </div>
  <% end %>
</div>

    <% end %>
</div>



