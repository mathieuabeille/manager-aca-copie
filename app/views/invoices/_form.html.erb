
<%= simple_form_for(@invoice) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
  <%= f.input :name, label: "Nom du devis"  %>
  <%= f.input :author, label: "Auteur du devis" %>
  <%= f.association :client,  as: :select, label: "Nom du client" %>
  <p>  <%= link_to 'Ajouter un client', new_client_path, class: 'btn-flat-edit btn' %>
  </p>
  <%= f.input :status, collection:["Créé", "Soumis", "paiement effectué"], label: "Status du devis", default: "Créé" %>
  <%= f.input :invoicetype, collection:[ "Social", "Juridique"], prompt: "Comptabilité", label: "Type du devis" %>
</div>

<div class="form-actions">
  <%= f.button :submit, "Soumettre", class: "btn btn-flat" %>
</div>
<% end %>
